@import "nib"


body
	font-family Arial
	font-size 16px
	margin 0
.Box
	padding 0.1em
	display flex
	margin 0.1em
	&-id	
		font-size 0.8em
		justify-content space-between
		width 85px
		color white
		margin 0 0 0 0.5em
		text-align center
	&-description	
		font-size 0.8em
		justify-content space-between
		width 320px
		color white
		margin 0 0 0 0.5em
	&-real
		justify-content space-between	
		width 80px
		color white
		background rgba(239, 255, 0, 0.22)
		border 0.1em solid rgba(239, 255, 0, 0.22)
		box-shadow 0 0 10px rgba(black, 0.5)
		border-radius 0.5em
		margin 0 0 0 0.9em
	&-expected
		justify-content space-between	
		width 80px
		color white
		background rgba(0, 255, 255, 0.27)
		border 0.1em solid rgba(0, 255, 255, 0.27) 
		box-shadow 0 0 10px rgba(black, 0.5)	
		border-radius 0.5em
		margin 0 0 0 0.5em
	&-total
		justify-content space-between	
		width 425px
		color white
		text-align right
	&-totalreal
		justify-content space-between	
		width 80px
		color white
		background rgba(239, 255, 0, 0.22)
		border 0.1em solid yellow 
		box-shadow 0 0 10px rgba(black, 0.5)	
		border-radius 0.5em
		margin 0 0 0 0.5em
	&-totalexpected
		justify-content space-between	
		width 80px
		color white
		background rgba(0, 255, 255, 0.27)
		border 0.1em solid aqua
		box-shadow 0 0 10px rgba(black, 0.5)	
		border-radius 0.5em
		margin 0 0 0 0.5em
				
		
.Boxgeneral
	padding 0.1em
	display flex
	margin 0.1em
	
	&-id	
		font-size 1em
		justify-content space-between
		width 85px
		color aqua
		text-align center
		margin 0 0 0 0.5em
	&-description	
		justify-content space-between
		position center
		width 320px
		color aqua
		text-align center
		margin 0 0 0 0.5em
	&-real
		text-align center
		width 80px
		font-size 1em
		padding 0
